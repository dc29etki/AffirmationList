<%= javascript_include_tag "application" %>
<div id="content-area">
  <%= render "shared/navbar" %>
  
  <div class="w-100">
    <div class="text-center">
      <hr class="m-0">
      <div class="s1">
        <h1 style="color: black;">Welcome to AffirmationList!</h1>
        <h4>The largest list of affirmations ever compiled!</h4>
        <div class="buttons">
          <a href="/affirmations" class="btn color2 bigbutton btn-primary mt-5">Go to Affirmation List</a>
        </div>
      </div>
    </div>
    <div class="text-center pb-5" style="background: var(--mid-bg);">
      <hr class="m-0">
      <div class="mx-auto w-100">
        <h3 class="mt-5" style="color:var(--color4); font-weight:bold;">Login or Sign Up Now!<br></h3>
        <a href="/affirmations" class="btn color2 btn-primary mt-2">Login</a>
        <a href="/affirmations" class="btn color2 btn-primary mt-2">Sign Up</a>
      </div>
    </div>
    <div class="text-center mb-5">
      <hr class="mt-0 mb-0">
        <h3 class="mt-5" style="color:var(--color4); font-weight:bold;">Articles</h3>
           <div class="container mt-5">
              <div class="row">
                
                
                
                <% @blogs.each do |blog| %>
                      <div class="card-box  mx-4" style="width: 35%;" onclick="router.push('/view-blog/<%= blog.id %>')">
                          <div class="card-title">
                              <h2><%= blog.title %></h2>
                              <p style="height: 10vh; overflow: scroll;"><%= blog.text %></p>
                          </div>
                          <div class="card-link">
                              <a href="/view-blog/<%= blog.id %>" class="c-link" style="color: var(--color3); font-weight: bold;">Read More
                                  <i class="fa fa-angle-right"></i>
                              </a>
                          </div>
                      </div>
                <% end %>

              </div>
          </div>
    </div>
  </div>
  
  <%= render "shared/footer" %>
</div>

<style>

  .card-box {
      background: #FAFAFA;
      min-height: 300px;
      position: relative;
      padding: 30px 30px 20px;
      margin-bottom: 20px;
      display: -ms-flexbox;
      display: flex;
      -ms-flex-direction: column;
      flex-direction: column;
      -webkit-box-pack: justify;
      -ms-flex-pack: justify;
      justify-content: space-between;
      position: relative;
      cursor: pointer;
  }

  .card-box:hover {
      background: var(--mid-bg);
  }

  .card-box:after {
      display: block;
      background: #2196F3;
      border-top: 2px solid var(--color4);
      content: '';
      width: 100%;
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
  }

  .card-title h2 {
      margin: 0;
      padding-top: 5%;
      color: var(--color4);
      text-transform: uppercase;
      font-size: 24px;
      line-height: 1;
      margin-bottom: 15px;
  }

  .card-title p {
      margin: 0;
      margin-bottom: 10px;
      font-size: 16px;
  }

  .card-link a {
      text-decoration: none;
      color: var(--color4);
      font-size: 15px;
  }
  
  
  .s1{
    background: var(--color2);
    padding-top: 10vh;
    padding-bottom: 5vh;
  }
  h1{
    font-weight: bold;
    color: white;
    font-size: 3rem;
  }
  h4{
    color: #777;
  }
  .color2{
    background: var(--color3) !important;
    border: var(--color3);
  }
  .bigbutton{
    padding: 2vh;
    font-weight: bold;
    border: 2px solid var(--color1);
  }
  .row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }
</style>