<head><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></head>
<div id="content-area mb-5">
  <h1 class="text-center mt-3"></h1>
  
  <h1 class="text-center p-3" style="color:white;"><%= @cat.category %></h1>
  <div class="m-3 text-center">
    <a href="/affirmations" class="btn mx-auto color2 btn-primary" style="font-size: 20px;">	&larr; Back to All Categories</a>
  </div>
  <div class="buttons mx-auto">
    <a href="/view-affirmations/<%= @cat.category_safe %>/<%= @cat.sub1 %>" class="item <%= 'active' if @sub == @cat.sub1 %>"><%= @cat.sub1 %></a>
    <a href="/view-affirmations/<%= @cat.category_safe %>/<%= @cat.sub2 %>" class="item <%= 'active' if @sub == @cat.sub2 %>"><%= @cat.sub2 %></a>
    <a href="/view-affirmations/<%= @cat.category_safe %>/<%= @cat.sub3 %>" class="item <%= 'active' if @sub == @cat.sub3 %>"><%= @cat.sub3 %></a>
    <% if @cat.sub4 %>
      <a href="/view-affirmations/<%= @cat.category_safe %>/<%= @cat.sub4 %>" class="item <%= 'active' if @sub == @cat.sub4 %>"><%= @cat.sub4 %></a>
    <% end %>
    <% if @cat.sub5 %>
      <a href="/view-affirmations/<%= @cat.category_safe %>/<%= @cat.sub5 %>" class="item <%= 'active' if @sub == @cat.sub5 %>"><%= @cat.sub5 %></a>
    <% end %>
  </div>
  <div class="affs mx-auto mx-5 mb-3">
    <div class="row">   
     <div class="p1 mx-5">
       <% @affirmations.each do |a| %>
         <div class="aff row p-3 m-3">
           <div class="col-9"><%= a.affirmation %></div>
           <div class="col-3 text-right">
             <%= form_for Favorite.new do |f| %>
               <%= f.hidden_field :affirmation, value: a.affirmation %>
               <%= f.hidden_field :cat, value: @cat.category %>
               <%= f.hidden_field :sub, value: @sub %>
               <%= f.hidden_field :user_id, value: current_user.id %>
               <%= f.submit "Save", :class => "submitbutton" %>
             <% end %>
           </div>
         </div>
       <% end %>
     </div>

    </div>
  </div>
    
  <div class="spacer m-3 p-3"> </div>
    
</div>



<style>
  html{
      height: 100%;
      margin: auto;
      overflow: scroll !important;
  }
  .submitbutton {
    background: var(--color3) !important;
    color:  white;
    padding: 5px;
    border-radius: 10px;
    font-size: 18px;
    margin-top: auto;
    margin-bottom: auto;
    height: 100%;
  }
  .p1 {
    font-size: 18pt;
    padding: 50px;
    background: #eee;
  }
  .color2{
    background: var(--color3) !important;
    border: var(--color3);
    padding: 10px;
  }
  .bigbutton{
    padding: 2vh;
    font-weight: bold;
   /* border: 3px solid var(--color1);*/
  }
  .affs {
    border: 5px solid var(--color3);
    background: #eee;
    width: 85%;
    height: 75vh;
    overflow: scroll;
  }
  .aff {
    border: 3px solid var(--color3);
    color: black;
  }
  .buttons {
    display: flex;
    justify-content: space-between;
    width: 85%;
  }
  .buttons .item {
    font-size: 22px;
    color: white;
    background: var(--color3);
    padding: 10px 50px;
    border: 5px solid var(--color3);
    border-bottom: none;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }
  .active {
    background: #cd89a0 !important;
    font-weight: bold !important;
  }
</style>